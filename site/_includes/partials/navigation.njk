<!-- NAVIGATION -->
<ul role="list" class="switcher --threshold-00 --gap-000 --no-grow | hover-group">
  {% for itemKey, item in collections.all | navigation %}
    <li>
      {% set selected = item | selected(itemKey, key) %}
      <a data-selected="{{ selected }}" href="{{ item.url }}">{{ item.title }}</a>
      {% if item.sub.length > 0 and selected %}
        <ul role="list" class="hover-group | ml-0 size-00 mt-000">
          {% for subitem in item.sub %}
            <li><a data-selected="{{ key == subitem.key }}" href="{{ subitem.url }}">{{ subitem.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
